= form_for [@group, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .clearfix
    = f.label :name, "名前"
    .input
      = f.text_field :name
  .clearfix
    = f.label :email, "E-mailアドレス"
    .input
      = f.email_field :email
  .clearfix
    = f.label :active, "通知"
    .input
      = f.check_box :active
  .actions
    = f.submit "メンバー登録", :class => "btn primary"
