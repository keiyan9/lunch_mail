= form_for [@group, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .clearfix
    = f.label "名前"
    .input
      = f.text_field :name  
  .clearfix
    = f.label "連絡先"
    .input
      = f.text_field :email    
  .clearfix
    = f.label "パスワード"
    .input
      = f.text_field :password
  .clearfix
    = f.label "通知"
    .input
      - if @user.active == nil
        = f.check_box :active, :checked => true
      - else
        = f.check_box :active
  .actions
    = f.submit :class => "btn primary"