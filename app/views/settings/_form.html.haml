= form_for @setting do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg
  .alert-message.block-message.info
    = "設定した住所から半径300m圏内にある店舗がランダムで通知されます。"
  .clearfix
    = f.label "住所"
    .input
      = f.text_field :area
  .clearfix
    = f.label "通知時刻"
    .input
      = f.datetime_select :notice_at, :discard_year => true, :discard_month => true, :discard_day => true, :minute_step => 15
  .clearfix
    = f.label "通知"
    .input
      - if @setting.active == nil
        = f.check_box :active, :checked => true
      - else
        = f.check_box :active
  .actions
    = f.submit :class => "btn primary"
