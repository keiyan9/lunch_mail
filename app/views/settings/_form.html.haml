= form_for @setting do |f|
  -if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "住所"
    = f.text_field :area
  .field
    = f.label "通知時刻"
    = f.datetime_select :notice_at, :discard_year => true, :discard_month => true, :discard_day => true
  .actions
    = f.submit '登録'
