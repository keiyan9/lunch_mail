.page-header
  %h1 パスワードをお忘れですか？

.nav
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  .clearfix
    = f.label :email
    .input
      = f.email_field :email
  .actions
    = f.submit "パスワードをリセットする", :class => "btn primary"
= render :partial => "devise/shared/links"
