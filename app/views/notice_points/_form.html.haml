= form_for [@setting, @notice_point] do |f|
  -if @notice_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@notice_point.errors.count, "error")} prohibited this setting from being saved:"
      %ul
        - @notice_point.errors.full_messages.each do |msg|
          %li= msg

  .clearfix
    = f.label "名前"
    .input
      = f.text_field :name

  .clearfix
    = f.label "通知先"
    .input
      = f.text_field :email

  .actions
    = f.submit :class => "btn primary"